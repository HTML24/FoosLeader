{% extends "FoosLeaderCoreBundle::layout.html.twig" %}

{% block content %}
    <div class="page-header clearfix">
        <h1> League statistics </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">League progress</h3>
                </div>
                <div class="panel-body">
                    <div class="col-xs-12">
                        {% if elo_history_all_dates is empty %}
                            <strong>Let the season begin ! </strong>
                        {% else %}
                            {% include "FoosLeaderCoreBundle:Widgets:elo_graph_all.html.twig"  with { results: elo_history_all_dates, players : elo_history_all_players} %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Games played</h3>
                </div>
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <td>Rank</td>
                        <td>Name</td>
                        <td>Played</td>
                    </tr>
                    </thead>
                    <tbody>
                        {% for key,player in games_played %}
                            <tr>
                                {% if loop.index == 1 %}
                                    <td class="firstPlace">{{ loop.index }}</td>
                                {% elseif loop.index == 2 %}
                                    <td class="secondPlace">{{ loop.index }}</td>
                                {% elseif loop.index == 3 %}
                                    <td class="thirdPlace">{{ loop.index }}</td>
                                {% else %}
                                    <td>{{ loop.index }}</td>
                                {% endif %}
                                <td>{{ player.name }}</td>
                                <td>{{ player.games }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Games won</h3>
                </div>
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <td>Rank</td>
                        <td>Name</td>
                        <td>Won</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key,player in games_won %}
                        <tr>
                            {% if loop.index == 1 %}
                                <td class="firstPlace">{{ loop.index }}</td>
                            {% elseif loop.index == 2 %}
                                <td class="secondPlace">{{ loop.index }}</td>
                            {% elseif loop.index == 3 %}
                                <td class="thirdPlace">{{ loop.index }}</td>
                            {% else %}
                                <td>{{ loop.index }}</td>
                            {% endif %}
                            <td>{{ player.name }}</td>
                            <td>{{ player.won }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>.
    </div>

    <div class="row">
        <div class="col-xs-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Games won ratio</h3>
                </div>
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <td>Rank</td>
                        <td>Name</td>
                        <td>Win ratio</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key,player in games_won_ratio %}
                        <tr>
                            {% if loop.index == 1 %}
                                <td class="firstPlace">{{ loop.index }}</td>
                            {% elseif loop.index == 2 %}
                                <td class="secondPlace">{{ loop.index }}</td>
                            {% elseif loop.index == 3 %}
                                <td class="thirdPlace">{{ loop.index }}</td>
                            {% else %}
                                <td>{{ loop.index }}</td>
                            {% endif %}
                            <td>{{ player.name }}</td>
                            <td>{{ player.ratio|number_format(2, '.', ',') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Elo</h3>
                </div>
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <td>Rank</td>
                        <td>Name</td>
                        <td>Elo</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key,player in games_elo %}
                        <tr>
                            {% if loop.index == 1 %}
                                <td class="firstPlace">{{ loop.index }}</td>
                            {% elseif loop.index == 2 %}
                                <td class="secondPlace">{{ loop.index }}</td>
                            {% elseif loop.index == 3 %}
                                <td class="thirdPlace">{{ loop.index }}</td>
                            {% else %}
                                <td>{{ loop.index }}</td>
                            {% endif %}
                            <td>{{ player.name }}</td>
                            <td>{{ player.elo }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>.
    </div>
{% endblock %}
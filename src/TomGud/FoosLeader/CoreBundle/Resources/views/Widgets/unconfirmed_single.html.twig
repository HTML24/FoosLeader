<div class="single-result row bottom-buffer">
{% if result.player3 != null %}
	{% set first_team = result.player1.username ~ ' and ' ~ result.player3.username %}
	{% set second_team = result.player2.username ~' and ' ~ result.player4.username %}
{% else %}
	{% set first_team = result.player1.username %}
	{% set second_team = result.player2.username %}
{% endif %}
{% if result.team1score > result.team2score %}
	{% set status = 'won' %}
{% else %}
	{% set status = 'lost to' %}
{% endif %}
	<div class="first-team col-xs-9">
		<a href="{{ path("detail_result", { "id" :  result.id }) }}">{{ first_team }} <strong>{{ status }}</strong> {{ second_team }}, {{ result.team1Score }} - {{ result.team2Score }}</a>
	</div>
	<div class="single-result-action col-xs-3">
		<button type="button" class="confirm-single-result btn btn-success" id="confirm-{{ result.id }}"
			data-result-id="{{ result.id }}" data-action="close-result">Confirm</button>
	</div>
</div>
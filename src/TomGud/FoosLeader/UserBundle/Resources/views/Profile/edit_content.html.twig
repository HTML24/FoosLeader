<div class="page-header">
	<h1> Edit your profile </h1>
</div>
<div class="row">
	<div class="col-xs-6">
		<form class="form-horizontal fos_user_profile_edit" role="form" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">
		    <div class="form-group">
			    {{ form_label(form.username, null, { 'label_attr' : { "class" : "col-xs-4 control-label"} }) }}
			    <div class="col-xs-8">
			    	{{ form_widget(form.username, {'attr': {'class' : 'form-control'}}) }}
		    	</div>
		    </div>
		    <div class="form-group">
			    {{ form_label(form.email, null, {'label_attr': {'class' : 'col-xs-4 control-label'}}) }}
			    <div class="col-xs-8">
			    	{{ form_widget(form.email, {'attr': {'class' : 'form-control'}}) }}
			    </div>
		    </div>
		    <div class="form-group">
		    	{{ form_label(form.current_password, null, {'label_attr': {'class' : 'col-xs-4 control-label'}}) }}
		    	<div class="col-xs-8">
		    		{{ form_widget(form.current_password, {'attr': {'class' : 'form-control'}}) }}
		    	</div>
		    </div>
		    <div class="form-group">
			    <div class="col-xs-offset-4 col-xs-4">
			        <button type="submit" class="btn btn-block btn-success">{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</button>
		        </div>
		    </div>
		    {{ form_rest(form) }}
		</form>
	</div>
</div>

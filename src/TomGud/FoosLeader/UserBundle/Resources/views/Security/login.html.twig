{% extends "FOSUserBundle::layout.html.twig" %}

   
{% block fos_user_content %}
    <div class="container">
    <div class="col-xs-6">
        <form role="form" class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
            <h1>Foosball Duels</h1>

            <p>Looks like you are not logged in, please log in here, or sign up.</p>
            {% if error %}
                <div class="alert alert-warning">
                    {{ error|trans({}, 'FOSUserBundle') }}
                </div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control" />
            </div>

            <div class="checkbox" style="margin-left:25px;">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>
            <div class="btn-toolbar">
              <div class="btn-group">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-default pull-left" />
              </div>
              <div class="btn-group pull-right">
                <a href="{{ path('fos_user_registration_register') }}" class="btn btn-warning">Sign up</a>
                <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-warning">Forgotten password?</a>
              </div>
            </div>
            

            </form>
        </div>
    </div>
    </div>
{% endblock %}